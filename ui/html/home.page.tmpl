{{template "base" . }}

{{define "title"}}Home{{end}}

{{define "main"}}
    <h2>Latest Snippets</h2>
    {{if .Snippets}}
    <table>
        <tr><th>Title</th><th>Expires</th><th>ID</th></tr>
        {{range .Snippets}}
        <tr>
            <td><a href="/snippet/{{.ID}}">{{.Title}}</a></td>
            <td>{{humanDate .Expires}}</td>
            <td>{{.ID}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
        <p>There's nothing to see here... yet ðŸ˜…</p>
    {{end}}
{{end}}